<BaseLayout title="Eason Lin 的作品集" description="Eason Lin 的作品集，包含前端專案與開源專案。">
  <main>
    <h1>My Works</h1>
    <section class="grid-css">
      {
        works.map((work) => (
          <article class="card-wrapper">
            <div class="grid-item">
              <a
                class="img-link"
                href={work.link}
                aria-label={work.title}
                target="_blank"
                rel="noopener"
              >
                <img src={work.image} alt="" loading="lazy" />
              </a>
            </div>
            <header>
              <h2 class="work__title">{work.title}</h2>
            </header>
            <p class="work__text">{work.description}</p>
            <div class="work__tags">
              {work.techs.map((tech) => (
                <code>{tech}</code>
              ))}
            </div>
            <footer class="work__links">
              <a
                href={work.link}
                aria-label={work.title}
                target="_blank"
                rel="noopener"
              >
                <i class="fa-solid fa-link" aria-hidden="true" />
              </a>
              {work.github && (
                <a
                  href={work.github}
                  aria-label={work.title}
                  target="_blank"
                  rel="noopener"
                >
                  <i class="fa-brands fa-github" aria-hidden="true" />
                </a>
              )}
            </footer>
          </article>
        ))
      }
    </section>
  </main>
</BaseLayout>

<style>
  .grid-css {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 1rem 2rem;
  }

  .card-wrapper {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .grid-item {
    padding-top: 100%;
    position: relative;
  }

  .img-link {
    position: absolute;
    left: 0;
    top: 0;
    width: 100%;
    height: 100%;
  }

  .img-link img {
    width: 100%;
    height: 100%;
    object-fit: cover;
    padding: 0;
    margin: 0;
  }

  .work__title {
    margin: 0;
    font-size: 1.25rem;
    font-weight: 600;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 1;
    -webkit-box-orient: vertical;
  }

  .work__text {
    margin: 0;
    line-height: 1.6;
    flex-grow: 1;
    display: -webkit-box;
    overflow: hidden;
    text-overflow: ellipsis;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
  }

  .work__tags {
    display: flex;
    flex-wrap: wrap;
    gap: 0.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .work__tags li {
    border-radius: 6px;
    font-size: 0.875rem;
    font-weight: 500;
  }

  .work__links {
    display: flex;
    gap: 0.75rem;
    margin-top: auto;
  }

  .work__links a {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    transition: all 0.2s ease-in-out;
    text-decoration: none;
  }

  @media (max-width: 684px) {
    .grid-css {
      grid-template-columns: 1fr;
    }
  }
</style>
